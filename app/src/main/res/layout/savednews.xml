<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="10dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/newsimg"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <ImageView
        android:id="@+id/like"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/like"
        android:layout_marginTop="15dp"
        android:layout_below="@id/newsimg"/>

    <TextView
        android:id="@+id/likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/like"
        android:layout_below="@id/newsimg"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"/>


    <ImageView
        android:id="@+id/share"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toEndOf="@id/likes"
        android:src="@drawable/share"
        android:layout_below="@id/newsimg"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/shares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/share"
        android:layout_below="@id/newsimg"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="News Headlines"
        android:textColor="@color/black"
        android:layout_below="@id/like"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/continuereading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue Reading"
        android:clickable="true"
        android:textColor="@color/myfav"
        android:layout_below="@id/headline"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_baseline_watch_later_24"
        android:layout_toStartOf="@id/latestupdates"
        android:layout_below="@id/headline"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/latestupdates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latest Updates"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/headline"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_below="@id/latestupdates"
        android:layout_marginTop="10dp"/>


</RelativeLayout>